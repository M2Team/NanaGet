<Page
  x:Class="NanaGet.MainPage"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:local="using:NanaGet"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  mc:Ignorable="d">
  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="auto" />
      <RowDefinition Height="*" />
      <RowDefinition Height="auto" />
    </Grid.RowDefinitions>
    <CommandBar
      Grid.Row="0"
      HorizontalContentAlignment="Stretch"
      VerticalContentAlignment="Center"
      Background="Transparent"
      DefaultLabelPosition="Collapsed"
      IsDynamicOverflowEnabled="False"
      IsOpen="False">
      <AppBarButton
        Width="44"
        Icon="Add"
        ToolTipService.ToolTip="New Task" />
      <AppBarButton
        Width="44"
        Icon="Play"
        ToolTipService.ToolTip="Start All" />
      <AppBarButton
        Width="44"
        Icon="Pause"
        ToolTipService.ToolTip="Pause All" />
      <AppBarButton
        Width="44"
        Icon="Delete"
        ToolTipService.ToolTip="Clear List" />
      <CommandBar.SecondaryCommands>
        <AppBarButton Icon="Folder" Label="Open Downloads Folder" />
        <AppBarButton Icon="Setting" Label="Settings" />
        <AppBarButton Icon="Help" Label="About" />
      </CommandBar.SecondaryCommands>
      <CommandBar.Content>
        <AutoSuggestBox
          Margin="4,0"
          HorizontalAlignment="Stretch"
          VerticalAlignment="Center"
          PlaceholderText="Search Downloads"
          QueryIcon="Find" />
      </CommandBar.Content>
    </CommandBar>
    <ListView Grid.Row="1">
      <ListView.ItemContainerStyle>
        <Style TargetType="ListViewItem">
          <Setter Property="HorizontalContentAlignment" Value="Stretch" />
          <Setter Property="VerticalContentAlignment" Value="Stretch" />
          <Setter Property="Padding" Value="0" />
        </Style>
      </ListView.ItemContainerStyle>
      <CommandBar
        HorizontalContentAlignment="Stretch"
        VerticalContentAlignment="Center"
        Background="Transparent"
        DefaultLabelPosition="Collapsed"
        IsDynamicOverflowEnabled="False"
        IsOpen="False">
        <AppBarButton
          Width="44"
          Icon="Refresh"
          ToolTipService.ToolTip="Retry"
          Visibility="Collapsed" />
        <AppBarButton
          Width="44"
          Icon="Play"
          ToolTipService.ToolTip="Resume"
          Visibility="Collapsed" />
        <AppBarButton
          Width="44"
          Icon="Pause"
          ToolTipService.ToolTip="Pause" />
        <CommandBar.SecondaryCommands>
          <AppBarButton Icon="Link" Label="Copy Link" />
          <AppBarButton Icon="OpenLocal" Label="Open Folder" />
          <AppBarSeparator />
          <AppBarButton Icon="Cancel" Label="Cancel" />
          <AppBarButton Icon="Delete" Label="Remove" />
        </CommandBar.SecondaryCommands>
        <CommandBar.Content>
          <Grid
            Margin="4,0"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Center">
            <Grid.ColumnDefinitions>
              <ColumnDefinition Width="*" />
              <ColumnDefinition Width="2*" />
            </Grid.ColumnDefinitions>
            <TextBlock
              Grid.Column="0"
              Margin="12,0"
              VerticalAlignment="Center"
              Text="QQ9.0.9.exe" />
            <StackPanel Grid.Column="1">
              <TextBlock Text="31 MiB/s 47 MiB / 72.78 MiB 0:00:01" />
              <ProgressBar
                Height="4"
                BorderThickness="0"
                Foreground="Green"
                Maximum="100"
                Value="60" />
            </StackPanel>
          </Grid>
        </CommandBar.Content>
      </CommandBar>
    </ListView>
    <StackPanel
      Grid.Row="2"
      Height="32"
      Padding="4"
      VerticalAlignment="Bottom"
      Background="Transparent"
      Orientation="Horizontal">
      <FontIcon
        VerticalAlignment="Center"
        FontSize="15"
        Glyph="&#xE74B;" />
      <TextBlock
        Margin="4,0,8,0"
        VerticalAlignment="Center"
        FontSize="15"
        Text="500 KiB/s" />
      <FontIcon
        VerticalAlignment="Center"
        FontSize="15"
        Glyph="&#xE74A;" />
      <TextBlock
        Margin="4,0,8,0"
        VerticalAlignment="Center"
        FontSize="15"
        Text="100 KiB/s" />
    </StackPanel>
  </Grid>
</Page>
