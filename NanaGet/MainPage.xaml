              </Grid>
            </StackPanel>-->
          </StackPanel>
          <StackPanel
            Margin="0,12,0,0"
            HorizontalAlignment="Right"
            Orientation="Horizontal">
            <Button
              x:Uid="/NewTaskGrid/DownloadButton"
              Margin="0,0,6,0"
              Click="NewTaskGridDownloadButtonClick"
              Content="[Download]" />
            <Button
              x:Uid="/NewTaskGrid/CancelButton"
              Margin="6,0,0,0"
              Click="NewTaskGridCancelButtonClick"
              Content="[Cancel]" />
          </StackPanel>
        </StackPanel>
      </Border>
    </Grid>
